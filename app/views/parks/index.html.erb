<% provide(:title, 'All Parks') %>
<%=link_to "Add New Park", new_park_path %>

<h1>Highest Overall Rating</h1>
<ul class="barks">
  <% @overall_parks.each do |park| %>
    <li><%= link_to park.name, park %><br>
    Overall Rating: <%= number_with_precision(park.overall_average, precision: 1) %> | <%=park.reviews.count%> reviews </li>
  <% end %>
</ul>

<h1>Parks with Highest Energy Level</h1>
<ul class="barks">
  <% @energy_parks.each do |park| %>
    <li><%= link_to park.name, park %><br>
    Energy Level Rating: <%= number_with_precision(park.energy_level_average, precision: 1) %> | <%=park.reviews.count%> reviews </li>
  <% end %>
</ul>

<h1>Best Parks to Take a Doopsa</h1>
<ul class="barks">
  <% @facilities_parks.each do |park| %>

<% provide(:title, @park.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/park_info' %>
    </section>
    <section class="review_form">
      <% provide(:button_text, 'Add Review!') %>
      <%= render 'shared/review_form' %>
    </section>
  </aside>
  <div class="col-md-8">
      <h3>Description</h3>
      <p><%= @park.description%></p>
      <% if @park.reviews.any? %>
        <h3>Reviews (<%= @park.reviews.count %>)</h3>
        <ol class="barks">
          <%= render @reviews %>
        </ol>
      <% end %>

  </div>
</div>
